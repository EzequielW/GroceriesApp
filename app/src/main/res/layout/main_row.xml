<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_row_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:clickable="true"
    app:cardBackgroundColor="@color/colorPrimary"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/main_row_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:text="MyShopList"
            android:textSize="24sp"
            android:textColor="@color/colorWhite"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/main_row_cartSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:padding="4dp"
            android:background="@drawable/ic_border_pill"
            android:textSize="12sp"
            android:textColor="@color/colorWhite"
            android:text="30 items"
            app:layout_constraintStart_toStartOf="@+id/main_row_title"
            app:layout_constraintTop_toBottomOf="@+id/main_row_title" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/main_row_card_user1"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="40dp"
            app:layout_constraintStart_toStartOf="@+id/main_row_cartSize"
            app:layout_constraintTop_toBottomOf="@+id/main_row_cartSize">

            <ImageView
                android:id="@+id/main_row_user1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/bbq_sauce" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/main_row_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:srcCompat="@android:drawable/ic_input_add"
            app:tint="@color/colorWhite"
            app:backgroundTint="@color/colorBlackOverlay"
            app:elevation="0dp"
            app:pressedTranslationZ="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/main_row_card_user1"
            app:layout_constraintStart_toEndOf="@+id/main_row_card_user1"
            app:layout_constraintTop_toTopOf="@+id/main_row_card_user1" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>